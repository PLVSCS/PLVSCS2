<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
   <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">


    <style>
        table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
        }

        td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
        }

        tr:nth-child(even) {
        background-color: #dddddd;
        }
    </style>
</head>
<body>
    

    <form action="/admin/certificate" method="post">

        Generate Certificate for:
        <br>
        <br>

        <table  id="myTable">
            <thead>
                <tr>
                    <th>Student ID</th>
                    <th>Fullname</th>
                    <th>Rendered Hours</th>
                    <th>Lacking Hours</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
            </thead>
            <tbody>

                <% results.forEach(function(result) { %>
                    <% if(result.lackingHour != result.rendered ){ %>

                        <tr>
                            <th><%= result.studentNo %></th>
                            <td><%= result.firstName %> <%= result.surname %></td>
                            <td><%= result.rendered %></td>
                            <td><%= result.lackingHours %></td>
                            <td>
                                <% if(result.lackingHour == result.rendered ){ %>
                                    Completed
                                <% } else{ %>  
                                    Incomplete
                                <% } %>
                            </td>
                            <td>
                                <button onclick="viewInfo(this)" type="button">Generate Certificate</button>
                            </td>
                        </tr>


                    <% } else{ %>  
                        
                    <% } %>
                <% }); %> 


                
                 
            </tbody>
          </table>


